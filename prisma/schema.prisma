// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id              String    @id @default(cuid())
  name            String?
  username        String?   @unique
  email           String    @unique
  emailVerified   DateTime? @map("email_verified")
  image           String?
  password        String?   // For email/password authentication
  
  // Email verification tokens
  emailVerificationToken   String?   @unique @map("email_verification_token")
  emailVerificationExpires DateTime? @map("email_verification_expires")
  
  // Password reset tokens
  resetPasswordToken       String?   @unique @map("reset_password_token")
  resetPasswordExpires     DateTime? @map("reset_password_expires")
  
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  // Role and onboarding
  role            UserRole? @map("user_role")
  onboardingCompleted Boolean @default(false) @map("onboarding_completed")
  profileCompleted Boolean @default(false) @map("profile_completed")
  
  // Profile information
  bio             String?
  location        String?
  latitude        Float?
  longitude       Float?
  website         String?
  phone           String?
  
  // Buyer specific fields
  interests       String?   // JSON string of interests array
  
  // Seller specific fields  
  skills          String?   // JSON string of skills array
  hourlyRate      Float?    @map("hourly_rate")
  experience      String?
  availability    String?
  
  // Marketplace specific fields
  rating          Float     @default(0)
  reviewCount     Int       @default(0) @map("review_count")
  level           UserLevel @default(NEW_SELLER)
  verified        Boolean   @default(false)
  
  // Seller specific fields
  totalEarnings   Decimal   @default(0) @map("total_earnings") @db.Decimal(10, 2)
  activeOrders    Int       @default(0) @map("active_orders")
  responseTime    String?   @map("response_time")
  lastSeen        DateTime? @map("last_seen")
  isOnline        Boolean   @default(false) @map("is_online")
  
  // Relations
  accounts        Account[]
  sessions        Session[]
  gigs            Gig[]
  buyerOrders     Order[]   @relation("OrderBuyer")
  sellerOrders    Order[]   @relation("OrderSeller")
  sentMessages    Message[] @relation("MessageSender")
  receivedMessages Message[] @relation("MessageReceiver")
  givenReviews    Review[]  @relation("ReviewGiver")
  receivedReviews Review[]  @relation("ReviewReceiver")
  conversations   ConversationParticipant[]
  notifications   Notification[]
  transactions    Transaction[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Category {
  id          String        @id @default(cuid())
  name        String        @unique
  slug        String        @unique
  description String?
  icon        String
  image       String
  gigCount    Int           @default(0) @map("gig_count")
  isActive    Boolean       @default(true) @map("is_active")
  createdAt   DateTime      @default(now()) @map("created_at")
  
  subcategories Subcategory[]
  gigs        Gig[]

  @@map("categories")
}

model Subcategory {
  id         String   @id @default(cuid())
  name       String
  slug       String
  categoryId String   @map("category_id")
  gigCount   Int      @default(0) @map("gig_count")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  gigs       Gig[]

  @@unique([categoryId, slug])
  @@map("subcategories")
}

model Gig {
  id             String      @id @default(cuid())
  title          String
  description    String      @db.Text
  slug           String      @unique
  categoryId     String      @map("category_id")
  subcategoryId  String?     @map("subcategory_id")
  sellerId       String      @map("seller_id")
  price          Decimal     @db.Decimal(10, 2)
  deliveryTime   Int         @map("delivery_time") // in days
  rating         Float       @default(0)
  reviewCount    Int         @default(0) @map("review_count")
  views          Int         @default(0)
  orderCount     Int         @default(0) @map("order_count")
  isActive       Boolean     @default(true) @map("is_active")
  isFeatured     Boolean     @default(false) @map("is_featured")
  tags           String[]
  features       String[]
  images         String[]
  
  // Location fields
  city           String?
  address        String?
  latitude       Float?
  longitude      Float?
  
  createdAt      DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")
  
  // Relations
  category       Category    @relation(fields: [categoryId], references: [id])
  subcategory    Subcategory? @relation(fields: [subcategoryId], references: [id])
  seller         User        @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  orders         Order[]
  reviews        Review[]
  conversations  Conversation[]

  @@map("gigs")
}

model Order {
  id             String       @id @default(cuid())
  gigId          String       @map("gig_id")
  buyerId        String       @map("buyer_id")
  sellerId       String       @map("seller_id")
  status         OrderStatus  @default(PENDING)
  price          Decimal      @db.Decimal(10, 2)
  platformFee    Decimal      @db.Decimal(10, 2) @map("platform_fee")
  requirements   String?      @db.Text
  deliverables   String[]
  dueDate        DateTime     @map("due_date")
  deliveredAt    DateTime?    @map("delivered_at")
  completedAt    DateTime?    @map("completed_at")
  progress       Int          @default(0) // 0-100
  revisions      Int          @default(0)
  maxRevisions   Int          @default(3) @map("max_revisions")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  
  // Relations
  gig            Gig          @relation(fields: [gigId], references: [id])
  buyer          User         @relation("OrderBuyer", fields: [buyerId], references: [id])
  seller         User         @relation("OrderSeller", fields: [sellerId], references: [id])
  conversation   Conversation?
  review         Review?
  transactions   Transaction[]

  @@map("orders")
}

model Conversation {
  id            String    @id @default(cuid())
  gigId         String?   @map("gig_id")
  orderId       String?   @unique @map("order_id")
  lastMessage   String?   @map("last_message")
  lastMessageAt DateTime? @map("last_message_at")
  isActive      Boolean   @default(true) @map("is_active")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Relations
  gig           Gig?      @relation(fields: [gigId], references: [id])
  order         Order?    @relation(fields: [orderId], references: [id])
  participants  ConversationParticipant[]
  messages      Message[]

  @@map("conversations")
}

model ConversationParticipant {
  id             String       @id @default(cuid())
  conversationId String       @map("conversation_id")
  userId         String       @map("user_id")
  unreadCount    Int          @default(0) @map("unread_count")
  joinedAt       DateTime     @default(now()) @map("joined_at")
  lastReadAt     DateTime?    @map("last_read_at")
  
  // Relations
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@map("conversation_participants")
}

model Message {
  id             String       @id @default(cuid())
  conversationId String       @map("conversation_id")
  senderId       String       @map("sender_id")
  receiverId     String       @map("receiver_id")
  content        String       @db.Text
  messageType    MessageType  @default(TEXT) @map("message_type")
  attachments    String[]
  isRead         Boolean      @default(false) @map("is_read")
  readAt         DateTime?    @map("read_at")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  
  // Relations
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation("MessageSender", fields: [senderId], references: [id])
  receiver       User         @relation("MessageReceiver", fields: [receiverId], references: [id])

  @@map("messages")
}

model Review {
  id          String   @id @default(cuid())
  orderId     String   @unique @map("order_id")
  gigId       String   @map("gig_id")
  reviewerId  String   @map("reviewer_id")
  revieweeId  String   @map("reviewee_id")
  rating      Int      // 1-5
  comment     String?  @db.Text
  isHelpful   Int      @default(0) @map("is_helpful")
  isPublic    Boolean  @default(true) @map("is_public")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relations
  order       Order    @relation(fields: [orderId], references: [id])
  gig         Gig      @relation(fields: [gigId], references: [id])
  reviewer    User     @relation("ReviewGiver", fields: [reviewerId], references: [id])
  reviewee    User     @relation("ReviewReceiver", fields: [revieweeId], references: [id])

  @@map("reviews")
}

model Transaction {
  id              String            @id @default(cuid())
  orderId         String            @map("order_id")
  userId          String            @map("user_id")
  amount          Decimal           @db.Decimal(10, 2)
  platformFee     Decimal           @db.Decimal(10, 2) @map("platform_fee")
  type            TransactionType
  status          TransactionStatus @default(PENDING)
  paymentGateway  String            @map("payment_gateway") // razorpay, stripe
  paymentId       String?           @map("payment_id")
  refundId        String?           @map("refund_id")
  description     String?
  metadata        Json?
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  
  // Relations
  order           Order             @relation(fields: [orderId], references: [id])
  user            User              @relation(fields: [userId], references: [id])

  @@map("transactions")
}

model Notification {
  id          String           @id @default(cuid())
  userId      String           @map("user_id")
  title       String
  message     String           @db.Text
  type        NotificationType
  data        Json?            // Additional data related to notification
  isRead      Boolean          @default(false) @map("is_read")
  readAt      DateTime?        @map("read_at")
  createdAt   DateTime         @default(now()) @map("created_at")
  
  // Relations
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// Enums
enum UserLevel {
  NEW_SELLER
  LEVEL_1
  LEVEL_2
  TOP_RATED
}

enum UserRole {
  BUYER
  SELLER
  BOTH
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  DELIVERED
  COMPLETED
  CANCELLED
  DISPUTED
  REFUNDED
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  SYSTEM
}

enum TransactionType {
  PAYMENT
  REFUND
  WITHDRAWAL
  COMMISSION
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

enum NotificationType {
  ORDER_UPDATE
  MESSAGE
  REVIEW
  PAYMENT
  SYSTEM
}
